extends common/layout

block content
  main
    //Intro
    section.intro.contacts(style="background-image: url(assets/img/jpg/contacts.jpg)")
      .container
        .intro__wrapper
          //Crumbs
          +crumbs([
            {href: '', name: 'Контакты'},
          ])
          .intro__inner
            .intro__title.title
              h1 Контакты
            .intro__content.intro__content--dots.contacts__content
